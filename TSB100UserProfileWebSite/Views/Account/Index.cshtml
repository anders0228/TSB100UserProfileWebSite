@model TSB100UserProfileWebSite.Models.CreateAccountViewModel

<div class="container">
    <div class="row">
        <div class="col align-self-center">
            @using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="userFirstName">Förnamn</label>
                    @*<input type="text" class="form-control text-center" id="userFirstName" aria-describedby="Förnamn" placeholder="Förnamn" required>*@
                   @Html.ValidationMessageFor(vm => vm.firstname)
                    @Html.TextBoxFor(vm => vm.firstname, new { @class = "form-control text-center", @placeholder = "Förnamn" })
                </div>
                <div class="form-group">
                    <label for="userLastName">Efternamn</label>
                    @*<input type="text" class="form-control text-center" id="userLastName" aria-describedby="Efternamn" placeholder="Efternamn" required>*@
                    @Html.TextBoxFor(vm => vm.surname, new { @class = "form-control text-center", @placeholder = "Efternamn" })
                </div>
                <div class="form-group">
                    <label for="userEmail">E-Post adress</label>
                    @*<input type="email" class="form-control text-center" id="userEmail" aria-describedby="emailHelp" placeholder="E-Post adress" required>*@
                    @Html.TextBoxFor(vm => vm.email, new { @class = "form-control text-center", @placeholder = "Epost" })

                </div>
                <div class="form-group">
                    <label for="userName">Användarnamn</label>
                    @*<input type="text" class="form-control text-center" id="userName" aria-describedby="username" placeholder="Användarnamn" required>*@
                    @Html.TextBoxFor(vm => vm.username, new { @class = "form-control text-center", @placeholder = "Användarnamn" })

                </div>
                <div class="form-group">
                    <label for="userPassword">Lösenord</label>
                    @*<input type="password" class="form-control text-center" id="userPassword" placeholder="Lösenord" required>*@
                    @Html.TextBoxFor(vm => vm.password, new { @class = "form-control text-center", @placeholder = "Lösenord" })

                </div>
                <button type="submit" class="btn btn-primary">Skapa Konto</button>
            }
        </div>

    </div>
</div>